<MainMenu>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 189/255, 158/255, 219/255, 1
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            text: 'Note Attack'
            font_name: 'Assets/CourierPrime-Regular.ttf'
            font_size: '70sp'
            color: 95/255, 29/255, 120/255, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}  

        Button:
            text: 'Start Game'
            font_name: 'Assets/CourierPrime-Regular.ttf'
            font_size: '31sp'
            color: 95/255, 29/255, 120/255, 1
            size_hint: None, None
            width: '300sp'
            height: '70sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}  
            on_press: root.transition_state(1)
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 151/255, 104/255, 196/255, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: 95/255, 29/255, 120/255, 1
                Line:
                    width: 3
                    rectangle: (self.x, self.y, self.width, self.height)

        Button:
            text: 'Rules'
            font_name: 'Assets/CourierPrime-Regular.ttf'
            font_size: '30sp'
            color: 95/255, 29/255, 120/255, 1
            size_hint: None, None
            width: '300sp'
            height: '70sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}  
            on_press: root.transition_state(2)
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 151/255, 104/255, 196/255, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: 95/255, 29/255, 120/255, 1
                Line:
                    width: 3
                    rectangle: (self.x, self.y, self.width, self.height)

        Button:
            text: 'Settings'
            font_name: 'Assets/CourierPrime-Regular.ttf'
            font_size: '30sp'
            color: 95/255, 29/255, 120/255, 1
            size_hint: None, None
            width: '300sp'
            height: '70sp'
            pos_hint: {'center_x': 0.5, 'center_y': 0.3} 
            on_press: root.transition_state(3)
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
