                Color:
                    rgba: 95/255, 29/255, 120/255, 1
                Line:
                    width: 3
                    rectangle: (self.x, self.y, self.width, self.height)
  
        Button:
            text: 'Leaderboard'
            font_name: 'Assets/CourierPrime-Regular.ttf'
