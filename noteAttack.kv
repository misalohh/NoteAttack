<GamePlay>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: root.background_colour
            Rectangle:
                size: self.size
                pos: self.pos

        Character:
            size_hint: None, None
            size: 100, 100
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            canvas:
                Color:
                    rgba: root.skin_colour
                Ellipse:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: root.character_line_colour
                Line:
                    width: 3
                    ellipse: (self.x, self.y, self.width, self.height)

        Button:
            text: 'Back to Menu'
            font_name: 'Assets/CourierPrime-Regular.ttf'
            font_size: '30sp'
            color: root.line_colour
            size_hint: None, None
            width: '300sp'
            height: '70sp'
            pos_hint: {'center_x': 0.65, 'center_y': 0.9}  
            on_press: root.transition_state(0)
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: root.button_colour
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: root.line_colour
                Line:
                    width: 3
                    rectangle: (self.x, self.y, self.width, self.height)

        Label:
            text: 'score: ' + root.score
            font_name: 'Assets/CourierPrime-Regular.ttf'
            font_size: '30sp'
            color: root.line_colour
            size_hint: None, None
            width: '300sp'
            height: '70sp'
            pos_hint: {'center_x': 0.2, 'center_y': 0.05}  


