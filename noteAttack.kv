<GamePlay>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 189/255, 158/255, 219/255, 1
            Rectangle:
                size: self.size
                pos: self.pos

        Character:
            size_hint: None, None
            size: 100, 100
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            canvas:
                Color:
                    rgba: 95/255, 29/255, 120/255, 11
                Ellipse:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: 0, 0, 0, 1
                Line:
                    width: 3
                    ellipse: (self.x, self.y, self.width, self.height)

        Button:
            text: 'Back to Menu'
            font_name: 'Assets/CourierPrime-Regular.ttf'
            font_size: '30sp'
            color: 95/255, 29/255, 120/255, 1
            size_hint: None, None
            width: '300sp'
            height: '70sp'
            pos_hint: {'center_x': 0.65, 'center_y': 0.9}  
            on_press: root.transition_state(0)
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgba: 151/255, 104/255, 196/255, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
                Color:
                    rgba: 95/255, 29/255, 120/255, 1
                Line:
                    width: 3
                    rectangle: (self.x, self.y, self.width, self.height)

        Label:
            text: 'score: ' + root.score
            font_name: 'Assets/CourierPrime-Regular.ttf'
            font_size: '30sp'
            color: 95/255, 29/255, 120/255, 1
            size_hint: None, None
            width: '300sp'
            height: '70sp'
            pos_hint: {'center_x': 0.2, 'center_y': 0.05}  


<Enemies>:
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Ellipse:
            size: self.size
            pos: self.pos
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 3
            ellipse: (self.x, self.y, self.width, self.height)
    Label:
        text: root.note
        font_name: 'Assets/CourierPrime-Regular.ttf'
        size_hint: None, None
        size: self.size
        pos: root.pos
        color: 1, 1, 1, 1  
        font_size: '35sp'
        text_size: self.size
        halign: 'center'
        valign: 'middle'
            